@model ApolloWMS.Models.Balance

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Balance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Email Address</label>
                @*<input asp-for="EmployeeId" class="form-control" />*@
                <select asp-for="EmployeeId" asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "Email"))" class="form-control"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label">Leave Type</label>
                @*<input asp-for="LeaveTypeId" class="form-control" />*@
                <select asp-for="LeaveTypeId" asp-items="@(new SelectList(ViewBag.LeaveTypes, "LeaveTypeId", "LeaveTypeName"))" class="form-control"></select>
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalBalance" class="control-label"></label>
                <input asp-for="TotalBalance" class="form-control" />
                <span asp-validation-for="TotalBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsedBalance" class="control-label"></label>
                <input asp-for="UsedBalance" class="form-control" />
                <span asp-validation-for="UsedBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RemainedBalance" class="control-label"></label>
                <input asp-for="RemainedBalance" class="form-control" />
                <span asp-validation-for="RemainedBalance" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsEdited" /> @Html.DisplayNameFor(model => model.IsEdited)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ApolloWMS.Models.Report

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                @*<input asp-for="EmployeeId" class="form-control" />*@
                <select asp-for="EmployeeId" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "Email"))"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportingLevel" class="control-label"></label>
                <input asp-for="ReportingLevel" class="form-control" />
                <span asp-validation-for="ReportingLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportTo" class="control-label"></label>
                <select asp-for="ReportTo" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "Email"))"></select>
                <span asp-validation-for="ReportTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
